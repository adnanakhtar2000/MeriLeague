<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:cardBackgroundColor="@color/white"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/view"
        android:layout_width="120dp"
        android:layout_height="23dp"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="@id/cardview"
        app:layout_constraintEnd_toEndOf="@id/cardview"
        android:layout_marginLeft="115dp"
        android:layout_marginRight="115dp"
        android:outlineSpotShadowColor="@color/white"

        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@id/cardview"/>

    <TextView
        android:id="@+id/yourRank1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="Your Rank : 12"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/view"
       />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/first_teamFlag3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:elevation="5dp"
        android:src="@drawable/australia"
        app:layout_constraintStart_toStartOf="@id/cardview"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/second_teamFlag3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="30dp"
        android:elevation="5dp"
        android:src="@drawable/pakistan"
        app:layout_constraintEnd_toEndOf="@id/cardview"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:fontFamily="@font/poppins"
        android:text="V/S"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/first_teamFlag3"
        app:layout_constraintEnd_toStartOf="@+id/second_teamFlag3"
        app:layout_constraintStart_toEndOf="@+id/first_teamFlag3"
        app:layout_constraintTop_toTopOf="@+id/first_teamFlag3" />

    <TextView
        android:id="@+id/first_teamName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="AUS"
        android:textSize="14dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/first_teamFlag3"
        app:layout_constraintStart_toStartOf="@+id/first_teamFlag3"
        app:layout_constraintTop_toBottomOf="@+id/first_teamFlag3" />

    <TextView
        android:id="@+id/second_teamName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="PAK"
        android:textSize="14dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/second_teamFlag3"
        app:layout_constraintStart_toStartOf="@+id/second_teamFlag3"
        app:layout_constraintTop_toBottomOf="@+id/first_teamFlag3" />

    <TextView
        android:id="@+id/viewTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="You Won"
        android:textColor="@color/green"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/first_teamFlag3"
        app:layout_constraintStart_toStartOf="@+id/first_teamFlag3"
        app:layout_constraintTop_toBottomOf="@+id/first_teamName3" />

    <TextView
        android:id="@+id/UpdateTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Leaderboard"
        android:textColor="@color/green"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/second_teamFlag3"
        app:layout_constraintStart_toStartOf="@+id/second_teamFlag3"
        app:layout_constraintTop_toBottomOf="@+id/first_teamName3" />

    <TextView
        android:id="@+id/winPrizes2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:elevation="5dp"
        android:fontFamily="@font/poppins"
        android:text="10,0000"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/UpdateTeam"
        app:layout_constraintStart_toEndOf="@+id/viewTeam"
        app:layout_constraintTop_toBottomOf="@+id/first_teamName3" />


</androidx.constraintlayout.widget.ConstraintLayout>